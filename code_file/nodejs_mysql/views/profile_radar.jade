doctype html
html
	head
		meta(charset="utf-8")
		link(rel="stylesheet", href="/views/css/circle.css")
		link(rel="stylesheet", href="/views/css/main_style.css")
		script(src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0")

		title Your Github Profile
	body
		div(id="profile_page")
			h2(id="subject")= name
			p(id="user_area")
				img(id="user_img", src=privacy.user_info[0], alt="Github_user_img" height="180", width="180")
				div(class="user")
					b Bio :
					if privacy.user_info[1] != ""
						= privacy.user_info[1]
					br
					b Location :
					if privacy.user_info[2] != ""
						= privacy.user_info[2]
					br
					b Company :
					if privacy.user_info[5] != ""
						= privacy.user_info[5]
					br
					div(id="url")
						if privacy.user_info[3] != ""
							b Github Url :
							a(href=privacy.user_info[3], target="_blank")
								|  Visit! My Github!
							br
						b Website Url :
						if privacy.user_info[4] != ""
							a(href=privacy.user_info[4], target="_blank")
								|  Visit! My website!!
			br
			div
				b(id="repo", class="category") Repository
				hr(id="repohr", width="88%", color="black")
			ul(class="repo_list")
				each repo, index in privacy.repo_names
					li
						a(href=privacy.repo_info[index][1], target="_blank")
							| [
							= repo
							| ]
			div
				b(id="lang", class="category") Language
				hr(width="88%", color="black")
			each per_count, lang in privacy.repos_lang
				div(class=per_count)
					span= lang
					div(class="slice")
						div(class="bar")
						div(class="fill")
			- for(var i = 0; i < 8; i++)
				br
			div
				b(id="topic", class="category") Topic
				b(id="event", class="category") Event
				hr(width="88%", color="black")
			div(id="topic_send_value", name=topics, block="none")
			canvas(id="myBarChart", width="600", height="500")
			script(type="text/javascript", src="/views/js/bar_chart.js")
			div(id="event_send_value", name=events, block="none")
			canvas(id="myRadarChart", width="700", height="500")
			script(type="text/javascript", src="/views/js/radar_chart.js")
